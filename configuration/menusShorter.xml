            <cfg:accelerator code="F11"/>
         </cfg:item>
         <cfg:item command="insertThenSetReferenceRange" label="Insert and then Set Reference Range">
            <cfg:accelerator code="F11" modifiers="alt ctrl shift"/>
         </cfg:item>
      </cfg:menu>
